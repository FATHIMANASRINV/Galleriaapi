{extends file="layout/support/base.tpl"}
{block name="body"}
<div class="col-sm-8 col-sm-offset-2">
	<div class="wizard-container">
		<div class="card wizard-card" data-color="rose" id="wizardProfile">
			{form_open('','id="create_ticket" name="create_ticket" class="" ')}
			<div class="wizard-header">
				<h3 class="wizard-title">
					{lang('text_create_a_ticket')}
				</h3>
			</div>
			<div class="wizard-navigation">
				<ul>
					<li>
						<a href="#about" data-toggle="tab">{lang('text_about')}</a>
					</li>
					<li>
						<a href="#account" data-toggle="tab">{lang('text_account')}</a>
					</li> 
				</ul>
			</div>
			<div class="tab-content">
				<div class="tab-pane" id="about">
					<div class="row">
						<h4 class="info-text"> {lang('text_choose_basic')}</h4>
						<div class="col-sm-10 col-lg-offset-1">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="material-icons">line_weight</i>
								</span>
								<div class="form-group label-floating">
									<label class="control-label">{lang('text_priority')}<small>({lang('text_required')})</small></label>
									<select class="selectpicker" data-style="btn btn-primary btn-round" title="{lang('text_choose_priority')}" name="priority" id="priority" required="true" >
										<option disabled selected>{lang('text_choose_priority')}</option>
										{foreach from=$priority_arr item=v  }
										<option value="{$v.id}">{$v.name}</option>
										{/foreach}
									</select>
									{form_error('priority')}
								</div>
							</div>
							<div class="input-group">
								<span class="input-group-addon">
									<i class="material-icons">record_voice_over</i>
								</span>
								<div class="form-group label-floating">
									<label class="control-label">{lang('text_help_topic')}<small>({lang('text_required')})</small></label>
									<select class="selectpicker" data-style="btn btn-info btn-round" title="{lang('text_help_topic')}" name="topic" id="topic" required="true">
										<option disabled selected>{lang('text_help_topic')}</option>
										{foreach from=$topic_arr item=v  }
										<option value="{$v.id}">{$v.name}</option>
										{/foreach}
									</select>
									{form_error('topic')}
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="tab-pane" id="account">
					<div class="row">
						<div class="col-sm-12">
							<h4 class="info-text"> {lang('text_what_you_think')} </h4>
						</div>
						<div class="col-sm-10 col-sm-offset-1">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="material-icons">assignment_turned_in</i>
								</span>
								<div class="form-group label-floating">
									<label class="control-label">{lang('text_subject')}<small>({lang('text_required')})</small></label>
									<input type="text" class="form-control" name="subject" id="subject" value="{set_value('subject')}" required="true">
									{form_error('subject')}
								</div>
							</div>
						</div>
						<div class="col-sm-10 col-sm-offset-1">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="material-icons">chrome_reader_mode</i>
								</span>
								<div class="form-group label-floating">
									<label class="control-label">{lang('text_message')}<small>({lang('text_required')})</small></label>
									<textarea class="form-control" name="message" id="message" rows="5" required="true">{set_value('message')}</textarea>
									{form_error('message')}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="wizard-footer">
				<div class="pull-right">
					<input type='button' class='btn btn-next btn-fill btn-rose btn-wd' name='next' value="{lang('text_next')}"/>
					<input type='submit' class='btn btn-finish btn-fill btn-rose btn-wd' name='create_ticket' value="{lang('text_finish')}" />
				</div>
				<div class="pull-left">
					<input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value="{lang('text_previous')}" />
				</div>
				<div class="clearfix"></div>
			</div>
			{form_close()}
		</div>
	</div>
</div>
{/block}

{block name="footer"} 

<script src="{assets_url('support/js/jquery.bootstrap-wizard.js')}"></script>
<script src="{assets_url('support/js/bootstrap-notify.js')}"></script>
<script src="{assets_url('support/js/jquery.select-bootstrap.js')}"></script>
<script src="{assets_url('support/js/sweetalert2.js')}"></script>

<script type="text/javascript">
	$(document).ready(function() {
		Sign.initMaterialWizard();
		setTimeout(function() {
			$('.card.wizard-card').addClass('active');
		}, 600);
		setFormValidation('#create_ticket');
	});
</script>
{/block}
