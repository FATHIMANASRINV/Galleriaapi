{extends file="layout/base.tpl"}
{block name="header"}
<style>
	.user-grid {
	display: flex;
	flex-wrap: wrap;
	gap: 15px;
}

.user-card {
	width: calc(20% - 12px); 
	background: transparent;
	color: white;
	padding: 15px;
	border-radius: 10px;
	text-align: center;
	box-sizing: border-box;
	transition: 0.3s;
	BORDER: 1PX SOLID rgba(255, 255, 255, 0.25);
}
.user-card:hover {
	background: #3a404b;
	transform: translateY(-2px);
}
@media (max-width: 991px) {
	.user-card { width: calc(33.33% - 10px); }
}
@media (max-width: 767px) {
	.user-card { width: calc(50% - 8px); } 
}
.user-icon {
	background-color: #00c0a3;
	width: 50px;
	height: 50px;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 0 auto 10px auto;
	font-size: 24px;
}


</style>
{/block}
{block name="body"}

<div class="row">
	<div class="card h-100 w-100">
	<div class="messenger">
		<div class="messenger-sidebar" style="max-width:100%;">
			<div class="messenger-sidebar-header text-center mb-3">
				<h3 style="color: white; display: inline-block; padding: 5px 15px; border-radius: 5px;">Monoline Users</h3>
			</div>
			<div class="messenger-sidebar-body">
				<div class="user-grid">
					{foreach $users as $user}
					<div class="user-card">
						<div class="user-icon">
							<i class="bi bi-android2 text-white"></i>
						</div>
						<div class="user-name">{$user.user_name}</div>
					</div>
					{/foreach}
				</div>
			</div>
		</div>
	</div>
</div>

</div>
{/block}
{block name="footer"}
<script type="module" src="{assets_url()}backend/js/demo/page-messenger.demo.js"></script>

<script type="text/javascript">
</script>
{/block}