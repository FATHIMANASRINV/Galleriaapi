{extends file="$layout"}
{if empty($news_details)}
{block name="header"}
{/block}
{block name="body"}  
<main class="main" id="top">
    <div class="container" data-layout="container">
        <div class="row flex-center min-vh-100 py-6 text-center">
            <div class="col-sm-10 col-md-8 col-lg-6 col-xxl-5">
                <div class="card">
                    <div class="card-body p-4 p-sm-5">
                        <div class="fw-black lh-1 text-300 fs-error">{lang('error')}</div>
                        <p class="lead mt-4 text-800 font-sans-serif fw-semi-bold w-md-75 w-xl-100 mx-auto">{lang('text_no_transfer_details_found')}</p>
                        <hr />
                        <a class="btn btn-primary btn-sm mt-3" href="{base_url()}/user/tools/news "><span class="fas fa-home me-2"></span>{lang('back')}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{/block}
{else}
{block name="header"}
{/block}
{block name="body"}
<div class="card mb-3">
  <img class="card-img-top" {if !empty($news_details[0]['image'])} src="{assets_url()}images/news_images/{$news_details[0]['image']}" {else} src="{assets_url()}images/profile/bg.jpg"  {/if} width="400" height="480" alt="{$news_details[0]['title']}" />
    <div class="card-body">
        <div class="row justify-content-between align-items-center">
            <div class="col">
                <div class="d-flex"> 
                    <div class="flex-1 fs--1">
                        <div class="alert alert-dark mb-0" role="alert">
                            <h5 class="fs-0">{$news_details[0]['title']}</h5>
                            <p class="mb-0">{$news_details[0]['start_date']|date_format}</p>
                        </div>

                    </div>
                </div>
            </div> 
        </div>
    </div>
</div>
<div class="row g-0">
    <div class="col-lg-8 pe-lg-2">
        <div class="card mb-3 mb-lg-0">
            <div class="card-body">
                <h5 class="fs-0 mb-3">{$news_details[0]['title']}</h5>
                <p>{$news_details[0]['content']}</p>


                <h5 class="fs-0 mt-5 mb-2"></h5><a class="badge border link-secondary me-1 text-decoration-none" href="#!"></a><a class="badge border link-secondary me-1 text-decoration-none" href="#!"></a><a class="badge border link-secondary me-1 text-decoration-none" href="#!"></a>
                <h5 class="fs-0 mt-5 mb-2"></h5>
                <div class="icon-group"></div>
                <div class="googlemap min-vh-50 rounded-3 mt-5" id="view-map" data-latlng="23.8383608,90.3680554" data-scrollwheel="false" data-icon="../../assets/img/icons/map-marker.png" data-zoom="17" data-theme="Default"> 
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 ps-lg-2">
        <div class="sticky-sidebar">

            <div class="card mb-3 mb-lg-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">{lang('more_news')}</h5>
                </div>
                <div class="card-body fs--1">

                    {foreach $more_news as $v} 
                    <div class="d-flex btn-reveal-trigger">
                        <div class="calendar"><span class="calendar-month">{date('M',strtotime($v.start_date))}</span><span class="calendar-day">{date('d',strtotime($v.start_date))}</span></div>
                        <div class="flex-1 position-relative ps-3">
                            <h6 class="fs-0 mb-0"><a href="../../tools/news_details/{$v.enc_id}">{$v.title}</a></h6>
                            <p class="text-1000 mb-0">{date('D ,M d ,Y',strtotime($v.start_date))}</p>
                            <div class="border-dashed-bottom my-3"></div>
                        </div>
                    </div>
                    {/foreach}

                </div>
                <div class="card-footer bg-light p-0 border-top"><a class="btn btn-link d-block w-100" href="../../tools/news">{lang('all_news')}<span class="fas fa-chevron-right ms-1 fs--2"></span></a></div>
            </div>
        </div>
    </div>
</div>
{/block}
{/if}