{block "header"}
<link rel="stylesheet" type="text/css" href="{assets_url('css/pages/gallery.min.css')}"> 
{/block}
<div id="filemanager" class="modal-dialog modal-lg">
	<div class="modal-content">
		<div class="modal-header">
			<h6 >Efile Images</h6>
			<div class="position-absolute top-0 end-0 mt-2 me-3 z-index-1">
              <button class="btn-close btn btn-sm btn-circle d-flex flex-center transition-base" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
		</div>
		<div class="modal-body">
			<div class="row">
				<div class="col-sm-5">
					<a href="{$refresh}" data-toggle="tooltip" title="{$button_refresh}" id="button-refresh" class="btn btn-default"><i class="fas fa-undo" ></i></a>
					<button type="button" data-toggle="tooltip" title="{$button_upload}" id="button-upload" class="btn btn-primary"><i class="fa fa-upload"></i></button>         
					<button type="button" data-toggle="tooltip" title="{$button_delete}" id="button-delete" class="btn btn-danger"><i class="fas fa-trash"></i></button>
				</div>
				<div class="col-sm-7">
					<div class="input-group">
						<input type="text" name="search" value="{$filter_name}" placeholder="{$entry_search}" class="form-control">
						<span class="input-group-btn">
							<button type="button" data-toggle="tooltip" title="{$button_search}" id="button-search" class="btn btn-primary"><i class="fa fa-search"></i></button>
						</span></div>
					</div>
				</div>
				<hr />

				{if $images}
				{* <section id="image-grid" class="card">
					<div class="card-content collapse show">
						<div class="card-body  my-gallery"> *}
							{* <div class="card-deck-wrapper"> *}

							 {*  <!-- {foreach image in images|batch(4)}  -->*}
								{* <div class="card-deck mt-1"> *}

								<div class="modal-body">
                                  <div class="container-fluid">
                                   <div class="row">


								{foreach from=$images key=key item=image}

									{if $image.type == 'image'}

									{* <figure class="card card-img-top border-grey border-lighten-2" itemprop="associatedMedia"> *}
										<div class="col-md-3 ml-auto">
										<a href="{$image.href}" class="thumbnail" itemprop="contentUrl" data-size="480x360" >
											<img class="gallery-thumbnail card-img-top img-thumbnail img-fluid" src="{$image.thumb}" itemprop="thumbnail" alt="{$image.name}" title="{$image.name}"/ style="height: 120px; width: 120px;" >
										</a>
										<div class="card-body px-0">
											<h4 class="card-title"><input type="checkbox" name="path[]" value="{$image.id}" /></h4>

										</div>
										</div>
									{* </figure> *}
									{/if}


									{if ( $key + 1 ) % 4 == 0 }
										{* </div> *}
										{* <div class="card-deck mt-1"> *}
									{/if}
								{/foreach}

							</div></div></div>
								{* </div> *}
							{* </div> *}
					{* 	</div>
					</div>
				</section> *}
				{else}
					<h6>No uploaded images found. Upload now...</h6>
				{/if}
				
				
    </div>
     <div class="modal-footer">{$pagination}</div>

</div>
</div>
{block "footer"} 

<script src="{assets_url('js/masonry.pkgd.min.js')}"></script>

<script type="text/javascript"><!--
	{if $target}
	$('a.thumbnail').on('click', function(e) {
		e.preventDefault();

		{if $thumb}
		$('#{$thumb}').find('img').attr('src', $(this).find('img').attr('src'));
		{/if}

		$('#{$target}').val($(this).parent().find('input').val());

		$('#modal-image').modal('hide');
    // $('#gallery_container').hide();
});
	{/if}

	$('a.directory').on('click', function(e) {
		e.preventDefault();

		$('#modal-image').load($(this).attr('href'));
	});

	$('.pagination a').on('click', function(e) {
		e.preventDefault();

		$('#modal-image').load($(this).attr('href'));
	});

	$('#button-parent').on('click', function(e) {
		e.preventDefault();

		$('#modal-image').load($(this).attr('href'));
	});

	$('#button-refresh').on('click', function(e) {
		e.preventDefault();

		$('#modal-image').load($(this).attr('href'));
	});

	$('input[name=\'search\']').on('keydown', function(e) {
		if (e.which == 13) {
			$('#button-search').trigger('click');
		}
	});

	$('#button-search').on('click', function(e) {
		var url = '{{base_url()}}admin/tools/get_image_gallery_ajax/efile_images?';

		var filter_name = $('input[name=\'search\']').val();

		if (filter_name) {
			url += 'filter_name=' + encodeURIComponent(filter_name);
		}

		{if $thumb}
		url += '&thumb=' + '{$thumb}';
		{/if}

		{if $target}
		url += '&target=' + '{$target}';
		{/if}

		$('#modal-image').load(url);
	});
	//-->

