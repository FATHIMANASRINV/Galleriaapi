{extends file="layout/base.tpl"}
{block name="header"}
{/block}
{block name="body"}
<br>
<div class="card">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <!-- start: BASIC TABLE PANEL -->
    <div class="card-header">
      <h4>
        {lang('text_available_efile')}
      </h4>
    </div>
    <div class="card-body">
      {if count($efile_details) > 0}
      <div class="table-responsive">
        <table class="table table-hover" id="sample-table-1">
          <thead>
            <tr>
              <th class="center">#</th>
              <th>{lang('text_efile_title')}</th>
              <th class="hidden-xs">{lang('text_efile_description')}</th>
              <th>{lang('text_added_date')}</th>
              <th>{lang('text_efile')}</th>
            </tr>
          </thead>
          <tbody>
            {$i=0}
            {foreach $efile_details as $v} 
            {$i=$i+1}
            <tr>
              <td class="center">{$i}</td>
              <td class="hidden-xs">{$v.title}</td>
              <td>{$v.content|truncate:20:"...":true}</td>
              <td>{$v.start_date}</td>
              <td >
               <a href="{assets_url()}images/efile_images/{$v.image}" class="btn btn-xs btn-green tooltips" data-placement="top" title="{lang('text_view')}"  target="blank" ><i class="fa fa-share"></i></a>
             </td>
           </tr>
           {/foreach}

         </tbody>
       </table>
     </div>
     {else}
     {* <div class="alert alert-block alert-warning fade in"> *}
      <p>
        <h3 class="text-center"> 
          <i class="fas fa-exclamation"></i> {lang('text_no_transfer_details_found')}
        </h3>
      </p>
    {* </div> *}
    {/if}
  </div>
</div>
<!-- end: BASIC TABLE PANEL -->
</div>
</div>

{/block}
{block name="footer"}<script>
  jQuery(document).ready(function() {


  });
</script>
{/block}