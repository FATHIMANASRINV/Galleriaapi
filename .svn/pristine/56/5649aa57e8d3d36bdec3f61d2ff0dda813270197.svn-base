
<script type="text/javascript">
	$(document).ready(function() {
		if ($('#totalTicketChart').length != 0 && $('#resolvedTicketChart').length != 0 && $('#openTicketChart').length != 0) {


			/* ----------==========     totalTicketChart    ==========---------- */
			var totalTickets = jQuery.parseJSON('{$total_tickets}');
			var openTickets = jQuery.parseJSON('{$open_tickets}');
			var resolvedTickets = jQuery.parseJSON('{$resolved_tickets}');
			var dataTotalTicketChart = {
				labels: ['J', 'F', 'M', 'A', 'M', 'J', 'J', 'A', 'S', 'O', 'N', 'D'],
				series: []
			};
			var seriesTotal = [];
			for (var i = 1; i <= 12; i++) {
				seriesTotal.push(totalTickets[i]["total_count"]);
			}
			dataTotalTicketChart.series.push(seriesTotal);
			var optionsTotalTicketChart = {
				axisX: {
					showGrid: false
				},
				low: 0,
				high: 25,
				chartPadding: {
					top: 0,
					right: 5,
					bottom: 0,
					left: 0
				}
			};
			var responsiveOptions = [
			['screen and (max-width: 640px)', {
				seriesBarDistance: 5,
				axisX: {
					labelInterpolationFnc: function(value) {
						return value[0];
					}
				}
			}]
			];
			var totalTicketChart = Chartist.Bar('#totalTicketChart', dataTotalTicketChart, optionsTotalTicketChart, responsiveOptions);
			md.startAnimationForBarChart(totalTicketChart);


			/* ----------==========     dataOpenTicketChart    ==========---------- */
			dataOpenTicketChart = {
				labels: [],
				series: []
			};
			var seriesOpen = [];
			var labelOpen = [];
			for (var i = 6; i >=0; i--) {
				labelOpen.push(openTickets[i]["xAxis"]);
				seriesOpen.push(openTickets[i]["yAxis"]);
			}
			dataOpenTicketChart.labels = labelOpen;
			dataOpenTicketChart.series.push(seriesOpen);
			optionsOpenTicketChart = {
				lineSmooth: Chartist.Interpolation.cardinal({
					tension: 0
				}),
				low: 0,
				high: 50,
				chartPadding: {
					top: 0,
					right: 0,
					bottom: 0,
					left: 0
				},
			}
			var openTicketChart = new Chartist.Line('#openTicketChart', dataOpenTicketChart, optionsOpenTicketChart);

			md.startAnimationForLineChart(openTicketChart);


			/* ----------==========     dataResolvedTicketChart    ==========---------- */
			dataResolvedTicketChart = {
				labels: [],
				series: []
			};
			var seriesOpen = [];
			var labelOpen = [];
			for (var i = 6; i >=0; i--) {
				labelOpen.push(resolvedTickets[i]["xAxis"]);
				seriesOpen.push(resolvedTickets[i]["yAxis"]);
			}
			dataResolvedTicketChart.labels = labelOpen;
			dataResolvedTicketChart.series.push(seriesOpen);
			optionsResolvedTicketChart = {
				lineSmooth: Chartist.Interpolation.cardinal({
					tension: 0
				}),
				low: 0,
				high: 50,
				chartPadding: {
					top: 0,
					right: 0,
					bottom: 0,
					left: 0
				},
			}
			var resolvedTicketChart = new Chartist.Line('#resolvedTicketChart', dataResolvedTicketChart, optionsResolvedTicketChart);

			md.startAnimationForLineChart(resolvedTicketChart);


		}
	});
</script>