<div class="tab-pane fade" id="profile">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">{lang('text_reply_to_ticket')}</h4>
            <p class="category">
             {lang('text_more_info')}
         </p>
     </div>
     <div class="card-content">
        <div class="timeline-footer">
            <div>
                <div class="panel panel-default">
                    <div class="panel-footer">
                        <div class="input-group">
                            <textarea class="form-control input-sm" placeholder="{lang('text_message_here')}" name="reply_msg" id="reply_msg" rows="5"/>{set_value('message')}</textarea>
                            <span class="input-group-btn">
                                <button class="btn btn-warning btn-sm" id="btn-reply" name='reply_msg' value="{lang('text_reply')}" type="button">
                                {lang('text_reply')}</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <ul class="timeline" id="ticket_actity">
                {* {foreach from=$ticket_actvy item=ta key=key}
                {if $ta.user_id == log_user_id()}
                {assign var=li_class value=''}
                {assign var=li_class_color value='info'} 
                {else}
                {assign var=li_class value='timeline-inverted'}
                {assign var=li_class_color value='success'} 
                {/if}

                <li {if $li_class } class="timeline-inverted" {/if}>
                    <div class="timeline-badge {$li_class_color}">
                        <i class="material-icons">history</i>
                    </div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <span class="label label-{$li_class_color}">{$ta.replied_user}</span>
                        </div>
                        <div class="timeline-body">
                            <p>{$ta.message}.</p>
                        </div>
                        <h6>
                            <i class="ti-time"></i> {$ta.date}
                        </h6>
                    </div>

                </li>
                {/foreach} *}
            </ul>
        </div>
    </div>
</div>