{extends file="layout/base.tpl"}
{block name="head"} 
<style type="text/css">
select.form-control {
    padding: 1.4375rem .75rem;
    border: 0;
    outline: 0;
    color: #aaa7a7;
}
</style>
{/block}
{block name="body"}
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header fw-bold ">{lang('text_create_a_ticket')}</div>


			<div class="card-body">
				{form_open_multipart('','id="create_ticket" name="create_ticket" class="row g-3 needs-validation" novalidate=""')}
				<div class="form-group">
					
					<div class="row">

						<div class="col-sm-4 mb-3"> 
							<select class="default-select form-control wide" title="{lang('text_help_topic')}" name="topic" id="topic" required>

                                   {foreach from=$topic_arr item=v  }
								<option value="{$v.id}">{$v.name}</option>
								{/foreach}
                                </select>
							<!-- <select class="form-control topic" data-style="btn btn-info btn-round" title="{lang('text_help_topic')}" name="topic" id="topic" required="true">
								<option disabled selected>{lang('text_help_topic')}</option>
								{foreach from=$topic_arr item=v  }
								<option value="{$v.id}">{$v.name}</option>
								{/foreach}
							</select> -->
							<input type="hidden" name="priority" id="priority" value="1">
							{form_error('topic')}
						</div>

						<div class="col-sm-8 mb-3"> 
							<input type="text" class="form-control" name="subject" id="subject" value="{set_value('subject')}" required="true" autocomplete="off" placeholder="{lang('text_subject')}">
							{form_error('subject')}
						</div>
					</div>

					<div class="form-group mb-3">
						<textarea class="form-control" name="message" id="message" rows="5" required="true" placeholder="{lang('text_message')}">{set_value('message')}</textarea>
						{form_error('message')}
					</div>
					<div class="row">
						<div class="col-lg-12 col-md-12"> 
							<div class="card">
								<div class="card-body">
									<h4 class="card-title">Upload Image</h4>
									<label for="input-file-now-custom-1"></label>
									<input type="file" id="input-file-now-custom-1" name="userfile" class="dropify" data-default-file="{assets_url('uploads/efiles/')}" />
								</div>
							</div>
						</div>
					</div>

				</div>
				<div class="d-flex justify-content-end">
					<input type='submit' class='btn btn-primary col-sm-2' name='create_ticket' value="Create" />
				</div>
				{form_close()}
			</div> 
			<div class="card-arrow">
				<div class="card-arrow-top-left"></div>
				<div class="card-arrow-top-right"></div>
				<div class="card-arrow-bottom-left"></div>
				<div class="card-arrow-bottom-right"></div>
			</div>
		</div>
	</div>
</div>
{/block}

{block name="footer"} 

<script src="{assets_url('support/js/jquery.bootstrap-wizard.js')}"></script>
<script src="{assets_url('support/js/bootstrap-notify.js')}"></script>
<!-- <script src="{assets_url('support/js/jquery.select-bootstrap.js')}"></script> -->
<script src="{assets_url('support/js/sweetalert2.js')}"></script>

<script type="text/javascript">
	$(document).ready(function() {
		Sign.initMaterialWizard();
		setTimeout(function() {
			$('.card.wizard-card').addClass('active');
		}, 600);
		setFormValidation('#create_ticket');
	});
</script>
{/block}

