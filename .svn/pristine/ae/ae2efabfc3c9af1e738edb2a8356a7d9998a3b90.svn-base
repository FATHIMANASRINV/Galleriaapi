{extends file="layout/base.tpl"}
{block name="header"}
{/block}
{block name="body"}
 <div class="card">
    <div class="card-header">
        <h5 class="mb-0" data-anchor="data-anchor">{lang('text_available_news')}</h5>
    </div>
    <div class="card-body ">
        {if count($news_details) > 0}
        <div class="card-body fs--1">
            <div class="row">
                {$i=0}
                {foreach $news_details as $v} 
                {$i=$i+1}
                <div class="col-md-6 h-100">
                    <div class="d-flex btn-reveal-trigger">
                        <div class="calendar"><span class="calendar-month">{date('M',strtotime($v.start_date))}</span><span class="calendar-day">{date('d',strtotime($v.start_date))}</span></div>
                        <div class="flex-1 position-relative ps-3">
                            <h6 class="fs-0 mb-0"><a href="news-details/{$v.enc_id}">{$v.title}</a></h6>

                            <p class="text-1000 mb-0">{lang('added')}: {$v.start_date}</p>
                            <div class="border-dashed-bottom my-3"></div>
                        </div>
                    </div>
                </div>
                {/foreach}
            </div>
        </div>
        {else}
        <p>
            <h3 class="text-center"> 
                <i class="fa fa-exclamation"></i> {lang('text_no_transfer_details_found')}
            </h3>
        </p> 
        {/if}
    </div>
</div> 
{/block}
 