<div class="form-group mb-3">
 <div class="row">

     <div class="col-sm-12">
        <input class="form-control" type="text" name="name" id="name" placeholder="Name" required autocomplete="off"  value="{$details['name']}">
        <div class="invalid-feedback">
            {lang('field_required')}
        </div>
    </div>
    <div class="tab-content " id="pills-warningtab1Content">  

    </div>
</div>
</div>
