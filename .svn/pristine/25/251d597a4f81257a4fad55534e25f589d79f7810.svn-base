  {extends file="layout/base.tpl"}
  {block name="header"}}

  <link rel="stylesheet" type="text/css" href="{assets_url()}theme/css/datatables.css">
  <link rel="stylesheet" type="text/css" href="{assets_url()}theme/css/datatable-extension.css">
  <!-- Responsive css-->
  {* <link rel="stylesheet" type="text/css" href="{assets_url()}theme/css/responsive.css"> *}


  {/block}
  {block name="body"}
  <div class="row">
  	<div class="col-md-12 col-xl-12">
  		<div class=" main-content-body-invoice">
  			<div class="card card-invoice">
  				<div class="card-body">
  					<div class="invoice-header">
  						<h2 class="invoice-title">Invoice</h2>
  						<div class="billed-from">
  							<h6>{$site_details['name']}</h6>
  							<p>{$site_details['address']}<br>
  								GSTIN  : {$site_details['gst']}<br>
  							Email: {$site_details['email']}</p>
  						</div>
  					</div>
  					<div class="row mt-4">
  						<div class="col-md">
  							<label class="text-gray-6">Billed To</label>
  							<div class="billed-to">
  								<h6 class="fs-14 fw-semibold">{$order_user_details['full_name']}
  								</h6>
  								<p>{$order_user_details['address']}
  									<br>
  									Tel No: {$order_user_details['mobile']}<br>
  								Email: {$order_user_details['email']}</p>
  							</div>
  						</div>
  						<div class="col-md">
  							<label class="text-gray-6">Invoice Information
  							</label>
  							<p class="invoice-info-row">
  								<span>Invoice No</span> 
  								<span>{$order_details['order_id']}</span>
  							</p>
							{* <p class="invoice-info-row">
								<span>Order ID</span> 
								<span>{$order_details['order_id']}</span>
							</p> *}
							<p class="invoice-info-row">
								<span>Order Date:</span> 
								<span>{$order_details['order_date']}</span>
							</p>
							{* <p class="invoice-info-row">
								<span>delivery Date:</span>
								<span>November 30, 2017</span>
							</p> *}
						</div>
					</div>
					<div class="table-responsive mt-4">
						<table class="table table-invoice border text-md-nowrap mb-0">
							<thead>
								<tr>
									<th class="w-20">Product Name</th>
									<th class="w-40">Description</th>
									<th class="text-center">QNTY</th>
									<th>Unit Price</th>
									<th>Amount</th>
								</tr>
							</thead>
							<tbody>
								{foreach $order_details['products'] as $p}
								<tr>
									<td>{$p['product_name']}</td>
									<td class="fs-12">{$p['description']}</td>
									<td class="text-center">{$p['quantity']}</td>
									<td>{cur_format($p['amount'])}</td>
									<td>{cur_format($p['subtotal'])}</td>
								</tr>
								{/foreach}
								
								<tr>
									<td class="align-top" colspan="2" rowspan="4">
										<div class="invoice-notes">
											<label class="main-content-label fs-13">Notes</label>
											<p class="fw-normal fs-13">Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
										</div><!-- invoice-notes -->
									</td>
									<td>Sub-Total</td>
									<td colspan="2">{cur_format($order_details['total_amount'])}</td>
								</tr>
								<tr>
									<td>Shipping Charge</td>
									<td colspan="2">{cur_format($order_details['shipping_charge'])}</td>
								</tr>
								<tr>
									<td>Discount</td>
									<td colspan="2">{cur_format($order_details['discount'])}</td>
								</tr>
								<tr>
									<td class=" text-uppercase tx-inverse">Final Amount</td>
									<td colspan="2">
										<h4 class="text-primary">{cur_format($order_details['final_amount'])}</h4>
									</td>
								</tr>
							</tbody>
						</table>
					</div>

					<a class="btn btn-purple float-end mt-3 ms-2" href="">
						<i class="mdi mdi-currency-usd me-1"></i>Pay Now
					</a>
					<a href="javascript:void(0);" class="btn btn-danger float-end mt-3 ms-2"  onclick="javascript:window.print();">
						<i class="mdi mdi-printer me-1"></i>Print
					</a>
					<a href="javascript:void(0);" class="btn btn-success float-end mt-3">
						<i class="mdi mdi-telegram me-1"></i>Send Invoice
					</a>
				</div>
			</div>
		</div>
	</div>
</div>


{/block}
{block name="footer"}

<script src="{assets_url()}libs/choices.js/public/assets/scripts/choices.min.js"></script>

<script src="{assets_url()}js/main.js"></script>


<script type="text/javascript">

	jQuery(document).ready(function() {

		$('.change_order_status').on('click', function(){

			var id = $(this).attr('data-order-id');
            //console.log(id);
			$("#order_id").val(id);

			$('#order_status_modal').modal();
		});
	});
</script>





{/block}








